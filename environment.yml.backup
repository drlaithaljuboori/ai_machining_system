# environment.yml
name: ai-machining
channels:
  - pytorch
  - nvidia
  - conda-forge
  - defaults
dependencies:
  - python=3.9
  - pytorch=1.13.1
  - torchvision=0.14.1
  - torchaudio=0.13.1
  - pytorch-cuda=11.7
  - cudatoolkit=11.7
  - numpy
  - scipy
  - scikit-learn
  - matplotlib
  - plotly
  - pandas
  - pillow
  - jinja2
  - pip
  - pip:
    - kaolin==0.15.0
    - trimesh
    - pyvista
    - open3d
    - kaleido
    - reportlab
    - openpyxl
    - pyyaml
